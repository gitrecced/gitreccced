<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/svTVScroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#424242">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#424242"
        tools:context=".TVDetailsFragment">

        <!-- TODO: Update blank fragment layout -->

        <TextView
            android:id="@+id/tvFirstAired"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView3"
            android:layout_toEndOf="@+id/TextView7"
            android:text="    "
            android:textColor="#c8c6d0" />

        <TextView
            android:id="@+id/TextView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tvShowOverview"
            android:layout_below="@+id/textView3"
            android:text="First Aired: "
            android:textColor="#c8c6d0" />

        <TextView
            android:id="@+id/tvShowOverview"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="287dp"
            android:text="    "
            android:textColor="#c8c6d0"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvShowTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tvShowOverview"
            android:layout_below="@+id/ivTVBackdrop"
            android:text="TextView"
            android:textColor="#c8c6d0"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/ivTVBackdrop"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@android:color/black" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tvShowOverview"
            android:layout_below="@+id/tvShowTitle"
            android:text="Seasons: "
            android:textColor="#c8c6d0" />

        <TextView
            android:id="@+id/tvSeasons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvShowTitle"
            android:layout_toEndOf="@+id/textView3"
            android:text="    "
            android:textColor="#c8c6d0" />
    </RelativeLayout>
</ScrollView>