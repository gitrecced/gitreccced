<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#424242"
    tools:context=".TVDetailsFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/tvShowOverview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="276dp"
        android:text="TextView"
        android:textColor="#c8c6d0"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvShowTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ivTVPoster"
        android:text="TextView"
        android:textColor="#c8c6d0"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/ivTVPoster"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@android:color/black" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvShowTitle"
        android:text="Seasons: "
        android:textColor="#c8c6d0" />

    <TextView
        android:id="@+id/tvSeasons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvShowTitle"
        android:layout_toEndOf="@+id/textView3"
        android:text="TextView"
        android:textColor="#c8c6d0" />
</RelativeLayout>