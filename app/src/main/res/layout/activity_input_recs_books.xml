<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#424242"
    tools:context=".InputRecsBooksActivity">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/searchlist_rv"
        android:layout_width="281dp"
        android:layout_height="353dp"
        android:layout_above="@+id/search_sv"
        android:layout_centerHorizontal="true"
        android:background="#424242" />

    <Button
        android:id="@+id/algolia_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="Algolia" />

    <Button
        android:id="@+id/next_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="Next" />

    <SearchView
        android:id="@+id/search_sv"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_above="@+id/algolia_btn"
        android:layout_centerHorizontal="true"
        android:background="#424242"
        android:ems="10"
        android:hint="Search"
        android:inputType="textPersonName"
        android:textColor="#c8c6d0" />

</RelativeLayout>