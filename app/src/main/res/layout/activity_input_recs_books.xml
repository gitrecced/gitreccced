<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#424242"
    tools:context=".InputRecsBooksActivity">

    <TextView
        android:id="@+id/tvAddBooks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:text="Add Books!"
        android:textColor="?attr/colorButtonNormal"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvFinish"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="48dp"
        android:layout_marginStart="-36dp"
        android:layout_toEndOf="@+id/searchlist_rv"
        android:text="Finish"
        android:textColor="#e1e1e1"
        android:textSize="24sp"
        android:textStyle="italic" />

    <SearchView
        android:id="@+id/search_sv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvAddBooks"
        android:background="#424242"
        android:ems="10"
        android:focusable="auto"
        android:foregroundTint="#c8c6d0"
        android:hint="Search"
        android:inputType="textPersonName"
        android:textColor="#c8c6d0"
        android:theme="@style/searchbartheme"
        tools:layout_marginTop="5dp"></SearchView>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/searchlist_rv"
        android:layout_width="match_parent"
        android:layout_height="405dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/search_sv"
        android:background="#424242" />

</RelativeLayout>